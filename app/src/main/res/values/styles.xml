<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>

        <!-- For Action bar overlay to correct the collapse -->
        <!-- <item name="android:fitsSystemWindows">true</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBarTransparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="MySplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- ActionBar styles -->

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <!-- <item name="android:textColor">@android:color/primary_text_dark</item> -->
        <!-- <item name="android:textSize">18sp</item> -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LabelSplashScreen">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextTimeLine">
        <item name="android:textColor">#CBC7F2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMarqueePrimary" parent="TextPrimary">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">#9A95C6</item>
    </style>

    <style name="TextMarqueeSecondary" parent="TextSecondary">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">#B2AED7</item>
    </style>

    <style name="TextPlayback">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">#7C76B3</item>
    </style>

    <style name="TextPlayback.Primary" parent="TextPlayback">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextPlayback.Secondary" parent="TextPlayback">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSongItemPrimary" parent="TextPlayback">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#EAE8F7</item>
    </style>

    <style name="TextSongItemsecondary" parent="TextPlayback">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#CBC6F7</item>
    </style>

    <style name="ButtonPrimarySize">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
    </style>

    <style name="ButtonSecondarySize">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ButtonSmallSize">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
</resources>